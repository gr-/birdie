<div metal:use-macro="view.layout">
   	<div metal:fill-slot="content-top" tal:omit-tag="">
        <h1>Birdie</h1>
        <p>Birdie V0.1 is a micro-blogging demo app for educational purpose.</p>
        <p><a href="${view.app_url}/about" class="btn btn-primary btn-lg" role="button">Learn more &raquo;</a></p>
	</div>

  	<div metal:fill-slot="content-bottom" tal:omit-tag="">
		<h1>Public Timeline</h1>
		<div class="row">
	    	<div class="col-lg-4" tal:repeat="chirp chirps">        
		    	<div class="panel panel-default">
					<div class="panel-heading">
						<a href="${view.app_url}/${chirp.author.username}/view">${chirp.author.fullname}</a>
						<span class="text-muted">@${chirp.author.username}</span>
						<div tal:condition="user is not None" tal:omit-tag="">
							<a href="${view.app_url}/${chirp.author.username}/follow" role="button" class="btn btn-success btn-xs pull-right" tal:condition="chirp.author.id not in follows and chirp.author.id!=user.id">follow</a>
							<a href="${view.app_url}/${chirp.author.username}/unfollow" role="button" class="btn btn-danger btn-xs pull-right" tal:condition="chirp.author.id in follows">unfollow</a>
						</div>
					</div>
					<div class="panel-body">
	                	${chirp.chirp}
						<span class="badge pull-right">${elapsed(chirp.timestamp)}</span>
	              	</div>
				</div>
			</div>
		</div>
	</div>
</div>